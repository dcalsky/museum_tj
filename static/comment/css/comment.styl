tongjiBlue = #283593
shallowBlue = #7798d2
timeRed = #C62828

#comment-post
  margin-top 8rem
  text-align center
  .title, .content
    text-align center
  input, textarea
    border 1px solid #c8c8c8
    font-size 1rem
    margin-bottom 1rem
    padding .2rem 1.2rem
  input
    height 26px
    min-width 300px
  textarea
    height 40px
    min-width 300px
  button
    padding .5rem 1.4rem
    background tongjiBlue
    color white
    border none
    font-size 1rem

#comments
  position relative
  height 500px
  margin 2rem 0
  #comments-slider li
    position absolute
    color white
    background #333333
    padding 1rem
    width 500px
    border-radius 10px
    .point1
      position absolute
      top -15px
      background white
      height 30px
      width 30px
      border-radius 50%
      border 1px solid #e2e2e2
    .point2
      position absolute
      top -8px
      background tongjiBlue
      border 1px solid #e2e2e2
      height 16px
      width 16px
      border-radius 50%
    .title
      font-size .9rem
      font-weight 500
    .create_time
      color timeRed
      font-size .8rem
    .content
      font-size .7rem


#comments #line
  position absolute
  left 50%
  width 1px
  height 100%
  background brown

#comments .btn
  text-align center
  position absolute
  bottom -80px
  height 50px
  width 100%
  button
    height 48px
    width 48px
    border 1px solid tongjiBlue
    color #333333
    border-radius 50%
    background white
    font-size 1.5rem
    margin 0 30px
    outline none
    transition all .4s
    cursor pointer
    &:hover
      box-shadow 0 0 5px 5px #d0d0d0


