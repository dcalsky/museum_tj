enColor = #EF6C00
tongjiBlue = #283593

body
  margin 0
  padding 0
  font-family Helvetica, 'Hiragino Sans GB', 'Microsoft Yahei', '微软雅黑', Arial, sans-serif;

ul
  list-style none
  margin 0
  padding 0

#header
  height 11.5rem
  background-image url('../img/tongji_badge.png')
  background-repeat no-repeat
  background-position center
  background-size auto 11.5rem
  line-height 11.5rem
  font-size 0.8rem
  padding 0 7rem

  @media screen and (max-width: 600px)
    padding 0 3rem

  #navbar
    position relative

#navbar li
  display inline-block
  margin 0 1.8rem
  padding 10px
  line-height 1.3rem
  text-align center
  border 2px solid transparent
  transition all .5s
  a
    text-decoration none
  span
    font-weight 400
    &:first-child
      color #000000 !important
      marign-bottom 5px
    &:last-child
      color enColor !important

#navbar-logo
  position absolute
  line-height 1rem
  text-align center
  top 3.5rem
  left 50%
  margin-left -119px
  color tongjiBlue
  p
    margin 0
  img
    width 5rem

#navbar #logo-left
  position absolute
  left 0
  li
    &:hover
      border 2px solid #f4b3c4

#navbar #logo-right
  position absolute
  right 0
  li
    &:hover
      border 2px solid #7ecef4

