tongjiBlue = #283593

#core
  position relative
  margin-top 5rem
  text-align center


.part-title
  margin 3rem 0
  span
    padding .6rem 6rem
    border-top 1px solid tongjiBlue
    border-bottom 1px solid tongjiBlue
    font-size 1.7rem
    font-weight 500

#floor
  padding 2rem 0
  min-width 950px
  li
    display inline-block
    padding 3rem
    border 1px solid #cecece
    margin 0 2rem
    min-width 141px
    transition box-shadow .5s
    &:hover
      box-shadow 2px 3px 4px 5px #eee
    .title
      font-size 1.3rem
    .en-title
      font-size 0.9rem
      color #6f6f6f
    .name
      font-size 1rem
      font-weight 400%
      color #818181
      margin-top 4rem
    .image div
      line-height 100px
      height 100px
      width 100px
      border-radius 50%
      margin 0 auto
      background tongjiBlue
      transition background 0.5s
      &:hover
        background tomato
      span
        font-size 2rem
        font-weight 600
        color #e7e7e7


#exhibition
  padding 2rem 0
  min-width 950px
  li
    display inline-block
    margin 0 .4rem
    max-width 230px
    .info
      font-weight 400
      color #6b6b6b
    .image
      position relative
      img
        width 100%
      .hover
        position absolute
        top 0
        left 0
        background-color rgba(0, 0, 0, 0.1)
        width 100%
        height 100%
